     phyxo_msg.invert_selection = "{{'Invert'|trans}}";

     phyxo_msg.processing = "{{'Loading...'|trans}}";
     phyxo_msg.search = "{{'Search'|trans}}";
     phyxo_msg.lengthMenu = "{{'Display _MENU_ users par page'|trans}}";
