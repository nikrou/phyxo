{% trans_default_domain 'admin' %}
{% extends "__layout.html.twig" %}

{% block breadcrumb_items %}
    <li class="breadcrumb-item"><a href="{{ path('admin_history') }}">{{'History'|trans}}</a></li>
    <li class="breadcrumb-item">{{'Statistics'|trans}}</li>
{% endblock %}

{% block content %}
    <h3>{{L_STAT_TITLE|raw}}</h3>
    <table class="table table-hover table-striped">
	<thead>
	    <tr>
		<th>{{PERIOD_LABEL}}</th>
		<th class="text-nowrap">{{'Pages seen'|trans}}</th>
		<th></th>
	    </tr>
	</thead>
	<tbody>
	    {% if statrows is defined %}
		{% for row in statrows %}
		    <tr>
			<td class="text-nowrap">{{row.VALUE|raw}}</td>
			<td>{{row.PAGES}}</td>
			<td style="width:100%">
			    <div class="progress">
				<div class="progress-bar" role="progressbar" aria-valuenow="{{row.WIDTH}}" aria-valuemin="0" aria-valuemax="100" style="width:{{row.WIDTH}}%">{{row.WIDTH}}%</div>
			    </div>
			</td>
		    </tr>
		{% endfor %}
	    {% endif %}
	</tbody>
    </table>
{% endblock %}
