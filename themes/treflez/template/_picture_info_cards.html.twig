<div id="infopanel-left" class="col-lg-6 col-12">
    <div id="card-informations" class="card mb-2">
        <div class="card-body">
            <h5 class="card-title">{{'Information'|trans}}</h5>
            <div id="info-content" class="d-flex flex-column">
		{% if display_info.author and INFO_AUTHOR is defined %}
		    <div id="Author" class="imageInfo">
			<dl class="row mb-0">
			    <dt class="col-sm-5">{{'Author'|trans}}</dt>
			    <dd class="col-sm-7">{{INFO_AUTHOR}}</dd>
			</dl>
		    </div>
		{% endif %}
		{% if CR_INFO_NAME is defined and not CR_INFO_NAME is empty %}
		    <div id="Copyright" class="imageInfo">
			<dl class="row mb-0">
			    <dt class="col-sm-5">{{'Copyright'|trans}}</dt>
			    <dd class="col-sm-7">{% if CR_INFO_URL is defined %}<a href="{{CR_INFO_URL}}">{{CR_INFO_NAME}}</a>{% else %}{{CR_INFO_NAME}}{% endif %}</dd>
			</dl>
		    </div>
		{% endif %}
		{% if display_info.rating_score and rate_summary is defined %}
		    <div id="Average" class="imageInfo">
			<dl class="row mb-0">
			    <dt class="col-sm-5">{{'Rating score'|trans}}</dt>
			    <dd class="col-sm-7">
				<span id="ratingScore">
				    {% if rate_summary.count %}
					{{rate_summary.score}}
				    {% else %}
					{{'no rate'|trans}}
				    {% endif %}
				</span>
				<span id="ratingCount">
				    {% if rate_summary.count %}({{'number_of_rates'|trans({'count': rate_summary.count})}}){% endif %}
				</span>
			    </dd>
			</dl>
		    </div>
		{% endif %}

		{% if rating is defined %}
		    <div id="rating" class="imageInfo">
			<dl class="row mb-0">
			    <dt class="col-sm-5" id="updateRate">{% if rating.USER_RATE is defined %}{{'Update your rating'|trans}}{% else %}{{'Rate this photo'|trans}}{% endif %}</dt>
			    <dd>
				<form action="{{rating.F_ACTION}}" method="post" id="rateForm">
				    {% for mark in rating.marks|reverse %}
					<input type="radio" id="rating-{{mark}}" name="rating"
					       value="{{mark}}" {% if rating.USER_RATE is defined and mark==rating.USER_RATE %}checked="checked"{% endif %}/>
					<label for="rating-{{mark}}" title="{{mark}}"></label>
				    {% endfor %}
				</form>
			    </dd>
			</dl>
		    </div>
		{% endif %}
		{% if display_info.created_on and INFO_CREATION_DATE %}
		    <div id="datecreate" class="imageInfo">
			<dl class="row mb-0">
			    <dt class="col-sm-5">{{'Created on'|trans}}</dt>
			    <dd class="col-sm-7"><a href="{{INFO_CREATION_DATE.url}}">{{INFO_CREATION_DATE.label}}</a></dd>
			</dl>
		    </div>
		{% endif %}
		{% if display_info.posted_on %}
		    <div id="datepost" class="imageInfo">
			<dl class="row mb-0">
			    <dt class="col-sm-5">{{'Posted on'|trans}}</dt>
			    <dd class="col-sm-7"><a href="{{INFO_POSTED_DATE.url}}">{{INFO_POSTED_DATE.label}}</a></dd>
			</dl>
		    </div>
		{% endif %}
		{% if display_info.visits %}
		    <div id="visits" class="imageInfo">
			<dl class="row mb-0">
			    <dt class="col-sm-5">{{'Visits'|trans}}</dt>
			    <dd class="col-sm-7">{{INFO_VISITS}}</dd>
			</dl>
		    </div>
		{% endif %}
		{% if display_info.dimensions and INFO_DIMENSIONS %}
		    <div id="Dimensions" class="imageInfo">
			<dl class="row mb-0">
			    <dt class="col-sm-5">{{'Dimensions'|trans}}</dt>
			    <dd class="col-sm-7">{{INFO_DIMENSIONS}}</dd>
			</dl>
		    </div>
		{% endif %}
		{% if display_info.file %}
		    <div id="File" class="imageInfo">
			<dl class="row mb-0">
			    <dt class="col-sm-5">{{'File'|trans}}</dt>
			    <dd class="col-sm-7">{{INFO_FILE}}</dd>
			</dl>
		    </div>
		{% endif %}
		{% if display_info.filesize and INFO_FILESIZE %}
		    <div id="Filesize" class="imageInfo">
			<dl class="row mb-0">
			    <dt class="col-sm-5">{{'Filesize'|trans}}</dt>
			    <dd class="col-sm-7">{{INFO_FILESIZE}}</dd>
			</dl>
		    </div>
		{% endif %}
		{% if display_info.categories and related_categories %}
		    <div id="Categories" class="imageInfo">
			<dl class="row mb-0">
			    <dt class="col-sm-5">{{'Albums'|trans}}</dt>
			    <dd class="col-sm-7">
				{% for cat in related_categories %}
				    {% if not loop.first %}, {% endif %}<a href="{{cat.url}}">{{cat.label}}</a>
				{% endfor %}
			    </dd>
			</dl>
		    </div>
		{% endif %}
		{% if display_info.privacy_level and available_permission_levels is defined %}
		    <div id="Privacy" class="imageInfo">
			<dl class="row mb-0">
			    <dt class="col-sm-5">{{'Who can see this photo?'|trans}}</dt>
			    <dd class="col-sm-7">
				<div class="dropdown">
				    <button  type="button" class="btn btn-primary btn-raised dropdown-toggle ellipsis" id="dropdownPermissions" data-toggle="dropdown" aria-expanded="true">
					{{available_permission_levels[current.level]}}
				    </button>
				    <div class="dropdown-menu" role="menu" aria-labelledby="dropdownPermissions">
					{% for level, label in available_permission_levels %}
					    <button type="button" id="permission-{{level}}" class="dropdown-item permission-li {% if current.level == level %} active{% endif %}"
						    data-action="setPrivacyLevel" data-id="{{current.id}}" data-level="{{level}}" data-label="{{label}}">{{label}}</button>
					{% endfor %}
				    </div>
				</div>
			    </dd>
			</dl>
		    </div>
		{% endif %}
            </div>
        </div>
    </div>
    {% if display_info.tags %}
	<div id="card-tags" class="card mb-2">
            <div class="card-body">
		<h5>{% if TAGS_PERMISSION_ADD %}<i class="fa fa-edit edit-tags"></i>{% endif %}{{'Tags'|trans}}</h5>
		{{include('_picture_tags.html.twig')}}
            </div>
	</div>
    {% endif %}
</div>

{% if metadata is defined or comment_add is defined or COMMENT_COUNT > 0 %}
    <div id="infopanel-right" class="col-lg-6 col-12">
	{% if metadata is defined %}
	    {% set exif_make = 'Make' %}
	    {% set exif_model = 'Model' %}
	    {% set exif_lens = 'UndefinedTag:0xA434' %}
	    {% set exif_fnumber = 'FNumber' %}
	    {% set exif_iso = 'ISOSpeedRatings' %}
	    {% set exif_focal_length = 'FocalLength' %}
	    {% set exif_flash = 'Flash' %}
	    {% set exif_exposure_time = 'ExposureTime' %}
	    {% set exif_exposure_bias = 'ExposureBiasValue' %}

	    <div id="card-metadata" class="card mb-2">
		<div class="card-body">
		    <h5 class="card-title">{{'EXIF Metadata'|trans}}</h5>
		    <div id="metadata">
			{% if not metadata.0.lines is empty and (metadata.0.lines[exif_make] is defined) or (metadata.0.lines[exif_model] is defined) %}
			    <div class="row" style="line-height: 40px">
				<div class="col-12">
				    <span class="camera-compact fa-3x mr-3" title="{{exif_make}} &amp; {{exif_model}}"></span>
				    {% if metadata.0.lines[exif_make] is defined %}{{metadata.0.lines[exif_make]}}{% endif %}
				    {% if metadata.0.lines[exif_model] is defined %}{{metadata.0.lines[exif_model]}}{% endif %}
				</div>
			    </div>
			{% endif %}
			{% if metadata.0.lines[exif_lens] is defined %}
			    <div class="row" style="line-height: 40px">
				<div class="col-12">
				    <span class="camera-lens-h fa-3x mr-3" title="{{exif_lens}}"></span>
				    {{metadata.0.lines[exif_lens]}}
				</div>
			    </div>
			{% endif %}
			<div class="row">
			    <div class="col-12{% if theme_config.fluid_width %} col-xl-10{% endif %}">
				<div class="row">
				    {% if metadata.0.lines[exif_fnumber] is defined %}
					<div class="col-6 col-sm-4">
					    <span class="camera-aperture fa-2x pr-2" title="{{exif_fnumber}}"></span> f/{{metadata.0.lines[exif_fnumber]}}
					</div>
				    {% endif %}
				    {% if metadata.0.lines[exif_focal_length] is defined %}
					<div class="col-6 col-sm-4">
					    <span class="camera-focal-length fa-2x pr-2" title="{{exif_focal_length}}"></span> {{metadata.0.lines[exif_focal_length]}}
					</div>
				    {% endif %}
				    {% if metadata.0.lines[exif_exposure_time] is defined %}
					<div class="col-6 col-sm-4">
					    <span class="camera-shutter-speed fa-2x pr-2" title="{{exif_exposure_time}}"></span> {{metadata.0.lines[exif_exposure_time]}}
					</div>
				    {% endif %}
				    {% if metadata.0.lines[exif_iso] is defined %}
					<div class="col-6 col-sm-4">
					    <span class="camera-iso fa-2x pr-2" title="{{exif_iso}}"></span> {{metadata.0.lines[exif_iso]}}
					</div>
				    {% endif %}
				    {% if metadata.0.lines[exif_exposure_bias] is defined %}
					<div class="col-6 col-sm-4">
					    <span class="camera-exposure fa-2x pr-2" title="{{exif_exposure_bias}}"></span> {{metadata.0.lines[exif_exposure_bias]}}
					</div>
				    {% endif %}
				    {% if metadata.0.lines[exif_flash] is defined %}
					<div class="col-6 col-sm-4">
					    <span class="camera-flash fa-2x pr-2 float-left h-100" title="{{exif_flash}}"></span><div> {{metadata.0.lines[exif_flash]}}</div>
					</div>
				    {% endif %}
				</div>
			    </div>
			</div>
		    </div>
		    <button type="button" id="show_exif_data" class="btn btn-primary btn-raised mt-1"><i class="fa fa-info mr-1"></i> {{'Show EXIF data'|trans}}</button>
		    <div id="full_exif_data" class="d-none flex-column mt-2">
			{% if metadata is defined %}
			    {% for key, meta in metadata %}
				<h4>{{meta.TITLE}}</h4>
				<div>
				    <dl class="row mb-0">
					{% for label, value in meta.lines %}
					    <dt class="col-sm-6">{{label}}</dt>
					    <dd class="col-sm-6">{{value}}</dd>
					{% endfor %}
				    </dl>
				</div>
			    {% endfor %}
			{% endif %}
		    </div>
		</div>
	    </div>
	{% endif %}
	<div id="card-comments" class="ml-2">
            {{include('_picture_info_comments.html.twig')}}
	</div>
    </div>
{% endif %}
