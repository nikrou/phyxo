<div id="navigationButtons" class="col-12 py-2">
    {% if DISPLAY_NAV_BUTTONS is defined or slideshow is defined %}
	{% if slideshow is defined %}
	    {% if slideshow.U_INC_PERIOD is defined %}
		<a href="{{slideshow.U_INC_PERIOD}}" title="{{'Reduce diaporama speed'|trans}}" class="pwg-state-default pwg-button">
		    <i class="fa fa-minus" aria-hiden="true"></i>
		</a>
	    {% else %}
		<i class="fa fa-minus" aria-hiden="true"></i>
	    {% endif %}
	    {% if slideshow.U_DEC_PERIOD is defined %}
		<a href="{{slideshow.U_DEC_PERIOD}}" title="{{'Accelerate diaporama speed'|trans}}" class="pwg-state-default pwg-button">
		    <i class="fa fa-plus" aria-hidden="true"></i>
		</a>
	    {% else %}
		<i class="fa fa-plus" aria-hidden="true"></i>
	    {% endif %}
	{% endif %}
	{% if slideshow.U_START_REPEAT is defined %}
	    <a href="{{slideshow.U_START_REPEAT}}" title="{{'Repeat the slideshow'|trans}}" class="pwg-state-default pwg-button">
		<i class="fa fa-repeat" aria-hidden="true"></i>
	    </a>
	{% endif %}
	{# TODO need an icon for this
	   {% if slideshow.U_STOP_REPEAT is defined %}
	   <a href="{{slideshow.U_STOP_REPEAT}}" title="{{'Not repeat the slideshow'|trans}}" class="pwg-state-default pwg-button">
	   <span class="pwg-icon pwg-icon-repeat-stop"></span>
	   </a>
	   {% endif %} #}
	{% if first is defined %}
	    <a href="{{first.U_IMG}}" title="{{'First'|trans}}{% if first.TITLE is defined %} : {first.TITLE}{% endif %}">
		<i class="fa fa-fast-backward" aria-hidden="true"></i>
	    </a>
	{% else %}
	    <i class="fa fa-fast-backward" aria-hidden="true"></i>
	{% endif %}

	{% if previous is defined %}
	    <a href="{{previous.U_IMG}}" title="{{'Previous'|trans}}{% if previous.TITLE_ESC is defined %} : {{previous.TITLE_ESC}}{% endif %}" id="navPrevPicture">
		<i class="fa fa-chevron-left" aria-hidden="true"></i>
	    </a>
	{% else %}
            <i class="fa fa-chevron-left" aria-hidden="true"></i>
	{% endif %}
	{% if U_UP is defined and not slideshow is defined %}
            <a href="{{U_UP}}" title="{{'Thumbnails'|trans}}">
		<i class="fa fa-chevron-up" aria-hidden="true"></i>
            </a>
	{% endif %}
	{% if theme_config.photoswipe and not thumbnails is empty %}
            <button type="button" class="btn btn-link" title="{{'Fullscreen'|trans}}" id="startPhotoSwipe">
		<i class="fa fa-arrows-alt" aria-hidden="true"></i>
            </button>
	{% endif %}
	{% if slideshow.U_START_PLAY is defined %}
	    <a href="{{slideshow.U_START_PLAY}}" title="{{'Play of slideshow'|trans}}">
		<i class="fa fa-play" aria-hidden="true"></i>
	    </a>
	{% endif %}
	{% if slideshow.U_STOP_PLAY is defined %}
	    <a href="{{slideshow.U_STOP_PLAY}}" title="{{'Pause of slideshow'|trans}}">
		<i class="fa fa-pause" aria-hidden="true"></i>
	    </a>
	{% endif %}
	{% if U_SLIDESHOW_STOP is defined %}
            <a href="{{U_SLIDESHOW_STOP}}" title="{{'stop the slideshow'|trans}}">
		<i class="fa fa-stop" aria-hidden="true"></i>
            </a>
	{% endif %}

	{% if next is defined %}
	    <a href="{{next.U_IMG}}" title="{{'Next'|trans}}{% if next.TITLE_ESC is defined %} : {{next.TITLE_ESC}}{% endif %}" id="navNextPicture">
		<i class="fa fa-chevron-right" aria-hidden="true"></i>
	    </a>
	{% else %}
	    <i class="fa fa-chevron-right" aria-hidden="true"></i>
	{% endif %}

	{% if last is defined %}
	    <a href="{{last.U_IMG}}" title="{{'Last'|trans}}{% if last.TITLE is defined %} : {{last.TITLE}}{% endif %}">
		<i class="fa fa-fast-forward" aria-hidden="true"></i>
	    </a>
	{% else %}
	    <i class="fa fa-fast-forward" aria-hidden="true"></i>
	{% endif %}
    {% endif %}
</div>
