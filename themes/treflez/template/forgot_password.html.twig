{% extends "__layout.html.twig" %}

{% block content %}
    <nav class="navbar navbar-contextual navbar-expand-lg {{theme_config.navbar_contextual_style}} {{theme_config.navbar_contextual_bg}} sticky-top mb-5">
	<div class="container{% if theme_config.fluid_width %}-fluid{% endif %}}">
	    <div class="navbar-brand mr-auto">
		<a href="{{U_HOME}}">{{'Home'|trans}}</a>{{LEVEL_SEPARATOR}}
		{{title}}
	    </div>
	    <ul class="nav navbar-nav">
		{% if PLUGIN_INDEX_ACTIONS is defined %}{{PLUGIN_INDEX_ACTIONS}}{% endif %}
	    </ul>
	</div>
    </nav>

    {{ include('_infos_errors.html.twig') }}

    {% if not infos %}
	<div class="container{% if theme_config.fluid_width %}-fluid{% endif %}">
	    <form action="{{forgot_password_action}}" method="post" class="form-horizontal">
		<div class="card col-lg-6">
		    <h4 class="card-header">
		        {{'Forgot your password?'|trans}}
		    </h4>
		    <div class="card-body">
		        <div class="form-text text-muted">
			    {{'Please enter your username or email address.'|trans}}
			    {{'You will receive a link to create a new password via email.'|trans}}
		        </div>
		        <div class="form-group">
			    <label for="username_or_email" class="control-label">{{'Username or email'|trans}}</label>
			    <input type="text" tabindex="1" id="username_or_email" name="_username_or_email" class="form-control" maxlength="40"{% if username_or_email is defined %} value="{{username_or_email}}"{% endif %} placeholder="{{'Username or email'|trans}}">
		        </div>
		        <div class="form-group">
			    <div class="col-sm-10">
			        <input type="hidden" name="_csrf_token" value="{{csrf_token}}">
			        <input type="submit" name="submit" value="{{'Change my password'|trans}}" class="btn btn-primary">
			    </div>
		        </div>
		    </div>
		</div>
	    </form>
	</div>
    {% endif %}
{% endblock %}
